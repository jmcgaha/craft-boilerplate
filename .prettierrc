{
	"useTabs": true,
	"tabWidth": 2,
	"semi": false,
	"singleQuote": true,
	"twigSingleQuote": true,

	"twigMultiTags": [
		"nav,endnav",
		"switch,case,default,endswitch",
		"ifchildren,endifchildren",
		"cache,endcache",
		"js,endjs"
	],
	"plugins": [
		"@zackad/prettier-plugin-twig-melody",
		"prettier-plugin-tailwindcss"
	]
}
